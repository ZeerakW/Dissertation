	number = {1},
	journal = {Human-centric Computing and Information Sciences},
	author = {Salminen, Joni and Hopf, Maximilian and Chowdhury, Shammur A. and Jung, Soon-gyo and Almerekhi, Hind and Jansen, Bernard J.},
