@article{Croom:2013,
  title = "How to do things with slurs: Studies in the way of derogatory words",
  journal = "Language \& Communication",
  volume = "33",
  number = "3",
  pages = "177 - 204",
  year = "2013",
  issn = "0271-5309",
  doi = "https://doi.org/10.1016/j.langcom.2013.03.008",
